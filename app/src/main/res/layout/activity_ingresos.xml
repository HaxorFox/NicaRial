<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ingresos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nicarial.nicarial.Ingresos"
    android:addStatesFromChildren="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Vacaciones:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textStyle="normal|bold"
            android:layout_marginBottom="18dp"
            android:layout_above="@+id/btnIngresos"
            android:layout_alignStart="@+id/textView13" />

        <TextView
            android:text="Total Ingresos:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textStyle="normal|bold"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/textView7"
            android:layout_marginBottom="14dp" />

        <TextView
            android:text="Total de Ingresos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt"
            android:layout_below="@+id/btnIngresos"
            android:layout_alignStart="@+id/txtVacas"/>

        <TextView
            android:text="Vacaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVacas"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toEndOf="@+id/textHoras"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editText10"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText9"
            android:layout_below="@+id/editText7"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_alignStart="@+id/editText7"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText10"
            android:layout_below="@+id/editText9"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_alignStart="@+id/editText11"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text|numberDecimal"
            android:ems="10"
            android:id="@+id/editText7"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/editText3"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/editText3"/>

        <TextView
            android:text="Horas Extras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textHoras"
            android:textSize="14sp"
            android:layout_alignBottom="@+id/editText9"
            android:layout_toEndOf="@+id/textView5"
            android:layout_marginStart="25dp"
            android:layout_alignTop="@+id/textView10"/>

        <TextView
            android:text="Horas Extras:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textStyle="normal|bold"
            android:layout_alignBottom="@+id/editText9"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="Viático:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textStyle="normal|bold"
            android:layout_alignBottom="@+id/editText10"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="Otros Ingresos:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textStyle="normal|bold"
            android:layout_below="@+id/textView12"
            android:layout_alignEnd="@+id/textView5"
            android:layout_marginTop="44dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText11"
            android:layout_alignBaseline="@+id/textView13"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/btnIngresos"
            android:layout_alignStart="@+id/txtVacas"/>

        <TextView
            android:text="Salario Básico:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textStyle="normal|bold"
            android:layout_alignBaseline="@+id/editText7"
            android:layout_alignBottom="@+id/editText7"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="Tipo de Salario:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textStyle="normal|bold"
            android:layout_alignBaseline="@+id/editText3"
            android:layout_alignBottom="@+id/editText3"
            android:layout_alignParentStart="true"/>

        <Button
            android:text="calcular ingresos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIngresos"
            android:layout_marginBottom="17dp"
            android:layout_above="@+id/textView14"
            android:layout_alignEnd="@+id/txt"
            android:layout_toEndOf="@+id/textView8"/>

    </RelativeLayout>

</RelativeLayout>

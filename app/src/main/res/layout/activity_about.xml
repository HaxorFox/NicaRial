<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nicarial.nicarial.AboutActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Esta aplicación fue desarrollada por:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/textView33"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Reinerio Rivera Vallejos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView36"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView35"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Lender Orozco Ruiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView37"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView36"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Adrian Olivares Portocarrero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView34"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView37"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Ángel Pineda Benard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView35"
        android:layout_below="@+id/textView33"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="Universidad Centroamericana | 2016"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView38"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView39"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Desarrollo de Aplicaciones Móviles I"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView39"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView34"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
